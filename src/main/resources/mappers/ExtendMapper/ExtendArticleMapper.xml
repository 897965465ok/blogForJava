<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiang.blog.model.dao.ExtendDao.ExtendArticleMapper">
    <select id="queryArticlesByTags" parameterType="java.lang.String"
            resultMap="com.jiang.blog.model.dao.ArticleMapper.BaseResultMap">
        select
        <include refid="com.jiang.blog.model.dao.ArticleMapper.Base_Column_List"></include>
        from article where tag = #{tags,jdbcType=VARCHAR}
    </select>

    <select id="queryArticles" resultMap="com.jiang.blog.model.dao.ArticleMapper.BaseResultMap">
        select
        <include refid="com.jiang.blog.model.dao.ArticleMapper.Base_Column_List"/>
        from article
    </select>
</mapper>